@model IEnumerable<OuviCidadeV3.Models.Resposta>

@{
    ViewData["Title"] = "Index";
}

<h1>Todas as Respostas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manifestacao.Protocolo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manifestacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Protocolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                <br />
                <a asp-action="Details" asp-controller="Manifestacao" asp-route-id="@item.Protocolo">Manifestação</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Protocolo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Protocolo">Responder</a> |
                <a asp-action="Delete" asp-route-id="@item.Protocolo">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

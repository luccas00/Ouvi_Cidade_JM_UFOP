@model OuviCidadeV3.Models.Cidadao

@{
    ViewData["Title"] = "Login";
}


<!-- Container principal -->
<div class="container d-flex justify-content-center align-items-center min-vh-100" style="margin-top: -35px;">
    <!-- Login Container -->
    <div class="row border rounded-4 p-3 bg-white shadow box-area">
        <style>
            /*------------ Login container ------------*/
            .box-area {
                width: 930px;
            }

            /*------------ Right box ------------*/
            .right-box {
                padding: 40px 30px 40px 40px;
            }
        </style>
        <!-- Caixa da Esquerda -->
        <div class="col-md-6 rounded-2 d-flex justify-content-center align-items-center flex-column left-box"
             style="background: #4682B4;">
            <div class="featured-image mb-3">
                <img src="~/FrontEnd/assets/login.png" class="img-fluid" style="width: 250px;">
            </div>
            <p class="text-white fs-2 mb-2" style="font-weight: 600;">
                Faça Manifestações!
            </p>
            <small class="text-white text-wrap text-center" style="width: 17rem;">
                Faça sua manifestação e ajude a
                melhorar nossa cidade!
            </small><br>
        </div>
        <div class="col-md-6 right-box">
            <div class="row align-items-center">
                <div class="header-text mb-4 ">
                    <h2 class="mb-3">Login Cidadão</h2>
                    <div class="col-md-12 mx-auto">
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Login" class="control-label" style="margin-right: 1000px"></label>
                                <input asp-for="Login" class="form-control" />
                                <span asp-validation-for="Login" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Senha" class="control-label" style="margin-right: 1000px"></label>
                                <input asp-for="Senha" class="form-control" type="password" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-4" style="margin-top: 10px; margin-bottom: 10px">
                                <input type="submit" value="Login" class="btn btn-primary"
                                       style="margin-right: 1000px" />
                            </div>
                        </form>

                        <div class="row">
                            <div class="col-md-12">
                                <p>Não possui conta? <a asp-controller="Cidadao" asp-action="Create">Nova Conta</a></p>
                            </div>
                            <div class="col-md-12">
                                <a asp-controller="Home" asp-action="Index">Pagina Inicial</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
